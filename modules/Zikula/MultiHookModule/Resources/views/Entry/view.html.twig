{# purpose of this template: entries list view #}
{% extends routeArea == 'admin' ? '@ZikulaMultiHookModule/adminBase.html.twig' : '@ZikulaMultiHookModule/base.html.twig' %}
{% block title own ? __('My entries') : __('Entries list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="zikulamultihookmodule-entry zikulamultihookmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@ZikulaMultiHookModule/Entry/viewQuickNav.html.twig', {workflowStateFilter: false}) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('zikulamultihookmodule_entry_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="entriesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActionsStart" />
                <col id="cShortForm" />
                <col id="cLongForm" />
                <col id="cTitle" />
                <col id="cEntryType" />
                <col id="cActive" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="text-center z-w02">
                        <input type="checkbox" class="zikulamultihook-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActionsStart" scope="col" class="z-w02">{{ __('Actions') }}</th>
                <th id="hShortForm" scope="col" class="text-left">
                    <a href="{{ sort.shortForm.url }}" title="{{ __f('Sort by %s', {'%s': 'short form'}) }}" class="{{ sort.shortForm.class }}">{{ __('Short form') }}</a>
                </th>
                <th id="hLongForm" scope="col" class="text-left">
                    <a href="{{ sort.longForm.url }}" title="{{ __f('Sort by %s', {'%s': 'long form'}) }}" class="{{ sort.longForm.class }}">{{ __('Long form') }}</a>
                </th>
                <th id="hTitle" scope="col" class="text-left">
                    <a href="{{ sort.title.url }}" title="{{ __f('Sort by %s', {'%s': 'title'}) }}" class="{{ sort.title.class }}">{{ __('Title') }}</a>
                </th>
                <th id="hEntryType" scope="col" class="text-left">
                    <a href="{{ sort.entryType.url }}" title="{{ __f('Sort by %s', {'%s': 'entry type'}) }}" class="{{ sort.entryType.class }}">{{ __('Entry type') }}</a>
                </th>
                <th id="hActive" scope="col" class="text-center">
                    <a href="{{ sort.active.url }}" title="{{ __f('Sort by %s', {'%s': 'active'}) }}" class="{{ sort.active.class }}">{{ __('Active') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for entry in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ entry.getKey() }}" class="zikulamultihook-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ entry.getKey() }}Start" headers="hItemActionsStart" class="actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('zikulaMultiHookMenuItemActions', [], {entity: entry, area: routeArea, context: 'view'}) %}
                    <div class="dropdown item-actions">
                        <a id="itemActions{{ entry.getKey() }}DropDownToggleStart" role="button" data-toggle="dropdown" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, {template: '@ZikulaMenuModule/Override/bootstrap_fontawesome.html.twig'}) }}
                    </div>
                </td>
                <td headers="hShortForm" class="text-left">
                    {{ entry.shortForm }}
                </td>
                <td headers="hLongForm" class="text-left">
                    {{ entry.longForm }}
                </td>
                <td headers="hTitle" class="text-left">
                    {{ entry.title|notifyFilters('zikulamultihookmodule.filterhook.entries')|safeHtml }}
                </td>
                <td headers="hEntryType" class="text-left">
                    {{ entry.entryType|zikulamultihookmodule_listEntry('entry', 'entryType') }}
                </td>
                <td headers="hActive" class="text-center">
                    {% set itemId = entry.getKey() %}
                    <a id="toggleActive{{ itemId }}" href="javascript:void(0);" class="zikulamultihook-ajax-toggle hidden" data-object-type="entry" data-field-name="active" data-item-id="{{ itemId }}">
                        <i class="fa fa-check text-success{% if not entry.active %} hidden{% endif %}" id="yesActive{{ itemId }}" title="{{ __('This setting is enabled. Click here to disable it.') }}"></i>
                        <i class="fa fa-times text-danger{% if entry.active %} hidden{% endif %}" id="noActive{{ itemId }}" title="{{ __('This setting is disabled. Click here to enable it.') }}"></i>
                    </a>
                    <noscript><div id="noscriptActive{{ itemId }}">
                        {% if entry.active %}
                            <i class="fa fa-check text-success" title="{{ __('Yes') }}"></i>
                        {% else %}
                            <i class="fa fa-times text-danger" title="{{ __('No') }}"></i>
                        {% endif %}
                    </div></noscript>
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}7{% else %}6{% endif %}">
            {{ __('No entries found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if all != 1 and pager|default %}
            {{ pager({rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'zikulamultihookmodule_entry_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="zikulaMultiHookModuleAction" class="col-sm-3 control-label">{{ __('With selected entries') }}</label>
                <div class="col-sm-6">
                    <select id="zikulaMultiHookModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if permissionHelper.hasComponentPermission('entry', constant('ACCESS_EDIT')) %}
                {% set createTitle = __('Create entry') %}
                <a href="{{ path('zikulamultihookmodule_entry_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}"><i class="fa fa-plus"></i> {{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if all == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            {% set routeArgs = own ? {own: 1} : {} %}
            <a href="{{ path('zikulamultihookmodule_entry_' ~ routeArea ~ 'view', routeArgs) }}" title="{{ linkTitle|e('html_attr') }}"><i class="fa fa-table"></i> {{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            {% set routeArgs = own ? {all: 1, own: 1} : {all: 1} %}
            <a href="{{ path('zikulamultihookmodule_entry_' ~ routeArea ~ 'view', routeArgs) }}" title="{{ linkTitle|e('html_attr') }}"><i class="fa fa-table"></i> {{ linkTitle }}</a>
        {% endif %}
        {% if own == 1 %}
            {% set linkTitle = __('Show also entries from other users') %}
            {% set routeArgs = all ? {all: 1} : {} %}
            <a href="{{ path('zikulamultihookmodule_entry_' ~ routeArea ~ 'view', routeArgs) }}" title="{{ linkTitle|e('html_attr') }}"><i class="fa fa-users"></i> {{ linkTitle }}</a>
        {% elseif permissionHelper.hasComponentPermission('entry', constant('ACCESS_EDIT')) %}
            {% set linkTitle = __('Show only own entries') %}
            {% set routeArgs = all ? {all: 1, own: 1} : {own: 1} %}
            <a href="{{ path('zikulamultihookmodule_entry_' ~ routeArea ~ 'view', routeArgs) }}" title="{{ linkTitle|e('html_attr') }}"><i class="fa fa-user"></i> {{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='zikulamultihookmodule.ui_hooks.entries.display_view', urlObject=currentUrlObject, outputAsArray=true) %}
        {% if hooks is iterable and hooks|length > 0 %}
            {% for area, hook in hooks %}
                <div class="z-displayhook" data-area="{{ area|e('html_attr') }}">{{ hook|raw }}</div>
            {% endfor %}
        {% endif %}
    {% endif % #}
{% endblock %}
