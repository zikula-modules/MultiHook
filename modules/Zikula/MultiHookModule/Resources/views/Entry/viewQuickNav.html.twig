{# purpose of this template: entries view filter form #}
{% trans_default_domain 'zikulamultihookmodule' %}
{% if permissionHelper.mayUseQuickNav('entry') %}
    {% form_theme quickNavForm with [
        'bootstrap_4_layout.html.twig'
    ] %}
    {{ form_start(quickNavForm, {attr: {id: 'zikulaMultiHookModuleEntryQuickNavForm', class: 'zikulamultihookmodule-quicknav form-inline', role: 'navigation'}}) }}
    {{ form_errors(quickNavForm) }}
    <a href="#collapseEntryQuickNav" role="button" data-toggle="collapse" class="btn btn-default" aria-expanded="false" aria-controls="collapseEntryQuickNav">
        <i class="fa fa-filter" aria-hidden="true"></i> {% trans %}Filter{% endtrans %}
    </a>
    <div id="collapseEntryQuickNav" class="collapse">
        <h3>{% trans %}Quick navigation{% endtrans %}</h3>
        {% if workflowStateFilter is defined and workflowStateFilter != true %}
            <div class="d-none">
        {% endif %}
            {{ form_row(quickNavForm.workflowState) }}
        {% if workflowStateFilter is defined and workflowStateFilter != true %}
            </div>
        {% endif %}
        {% if entryTypeFilter is defined and entryTypeFilter != true %}
            <div class="d-none">
        {% endif %}
            {{ form_row(quickNavForm.entryType) }}
        {% if entryTypeFilter is defined and entryTypeFilter != true %}
            </div>
        {% endif %}
        {% if searchFilter is defined and searchFilter != true %}
            <div class="d-none">
        {% endif %}
            {{ form_row(quickNavForm.q) }}
        {% if searchFilter is defined and searchFilter != true %}
            </div>
        {% endif %}
        {% if sorting is defined and sorting != true %}
            <div class="d-none">
        {% endif %}
            {{ form_row(quickNavForm.sort) }}
            {{ form_row(quickNavForm.sortdir) }}
        {% if sorting is defined and sorting != true %}
            </div>
        {% endif %}
        {% if pageSizeSelector is defined and pageSizeSelector != true %}
            <div class="d-none">
        {% endif %}
            {{ form_row(quickNavForm.num) }}
        {% if pageSizeSelector is defined and pageSizeSelector != true %}
            </div>
        {% endif %}
        {% if activeFilter is defined and activeFilter != true %}
            <div class="d-none">
        {% endif %}
            {{ form_row(quickNavForm.active) }}
        {% if activeFilter is defined and activeFilter != true %}
            </div>
        {% endif %}
        {{ form_widget(quickNavForm.updateview) }}
        <a href="{{ path('zikulamultihookmodule_entry_' ~ routeArea|default ~ 'view', {tpl: app.request.query.get('tpl', ''), all: app.request.query.get('all', '')}) }}" title="{% trans %}Back to default view{% endtrans %}" class="btn btn-default btn-sm">{% trans %}Reset{% endtrans %}</a>
    </div>
    {{ form_end(quickNavForm) }}
{% endif %}
